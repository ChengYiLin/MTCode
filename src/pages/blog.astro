---
import BaseLayout from '@layouts/BaseLayout.astro'
const allPosts = await Astro.glob('../pages/posts/*.md')

const pageTitle = 'Blog'
---

<BaseLayout pageTitle={pageTitle}>
    <h1>Blog</h1>
    <ul>
        {
            allPosts.map((post) => (
                <li>
                    <a href={post.url}>{post.frontmatter.title}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>
